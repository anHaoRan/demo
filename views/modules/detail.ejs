            var data = resp.body;
            // console.log(data);
          });
        },
        getStatistics: function(work) {
          var self = this;
          var url = `/cats/statistics`;
          this.$http.get(url).then(function(resp) {
            var data = JSON.parse(resp.body);
            self.cats = data;
          });
        },
        getType: function(type, channel, page) {
          var self = this;
          var page = page || 0;
          var channel = channel || 'male';
